<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <EditText
        android:id="@+id/inputSymptoms"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter symptoms here"
        android:background="@android:drawable/editbox_background" />

    <Button
        android:id="@+id/analyzeSymptoms"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Analyze Symptoms" />

    <ImageView
        android:id="@+id/uploadedImage"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:scaleType="centerCrop"
        android:visibility="gone"/>

    <Button
        android:id="@+id/uploadImage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Upload Image for Diagnosis" />

    <Button
        android:id="@+id/uploadReport"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Upload Medical Report (PDF, DOC)" />

    <Button
        android:id="@+id/getDiagnosis"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Get AI Diagnosis" />

    <TextView
        android:id="@+id/aiResponse"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="AI response will appear here"
        android:textSize="16sp"
        android:padding="10dp"
        android:background="@android:color/darker_gray"/>
</LinearLayout>